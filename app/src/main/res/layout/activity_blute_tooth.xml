<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1d3b45"
    tools:context="com.edu.xidian.hellowordld.helloworld.bluteToothActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/serch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索" />
        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/crete_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建房间" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
</LinearLayout>

    <TextView
        android:id="@+id/newdecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f7"
        android:textSize="20sp"
        android:text="未绑定"/>
    <ListView
    android:id="@+id/devie_List"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/binddevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f7"
        android:textSize="20sp"
        android:text="已绑定设备"/>
    <ListView
        android:id="@+id/bindDevie_List"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"/>


</LinearLayout>
